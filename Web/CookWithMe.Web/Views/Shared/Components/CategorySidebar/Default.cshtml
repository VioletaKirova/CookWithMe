@model List<CookWithMe.Web.ViewComponents.Models.CategorySidebarViewComponentViewModel>

<div class="four columns">
    <div class="widget">
        <h4 class="headline">Categories</h4>
        <span class="line margin-bottom-20"></span>
        <div class="clearfix"></div>

        <ul class="categories">
            @foreach (var category in Model)
            {
                <li><a href="/Categories/Recipes/@category.Id">@category.Title</a></li>
            }
        </ul>
    </div>
</div>
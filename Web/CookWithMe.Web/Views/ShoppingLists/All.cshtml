@model IEnumerable<CookWithMe.Web.ViewModels.ShoppingLists.All.ShoppingListAllViewModel>

@{
    ViewData["Title"] = "My Shopping Lists";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!-- Titlebar
================================================== -->
<section id="titlebar">
    <div class="container">
        <div class="eight columns">
            <h2>@ViewData["Title"]</h2>
        </div>
    </div>
</section>
<!-- Content
================================================== -->
<div class="container">
    <div class="sixteen columns">
        @if (this.TempData["Error"] != null)
        {
            @await Component.InvokeAsync("ErrorAlert", new { message = this.TempData["Error"] });
        }
        <ol class="directions" itemprop="recipeInstructions">
            @foreach (var shoppingList in Model)
            {
                <li>
                    <h4><a href="/ShoppingLists/Details/@shoppingList.Id">@shoppingList.RecipeTitle</a></h4>
                </li>
            }
        </ol>
        <div class="margin-bottom-50"></div>
        <br />
        <div class="margin-bottom-50"></div>
        <br />
    </div>
    <br />
    <div class="margin-bottom-50"></div>
    <br />
</div>
<br />
<div class="margin-top-50"></div>

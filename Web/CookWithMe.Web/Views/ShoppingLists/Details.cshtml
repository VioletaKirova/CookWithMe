@model CookWithMe.Web.ViewModels.ShoppingLists.ShoppingListDetailsViewModel

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Titlebar
================================================== -->
<section id="titlebar">
    <!-- Container -->
    <div class="container">

        <div class="eight columns">
            <h2 style="margin: 18px 0 0 0;">@Model.RecipeTitle</h2>
            <p>Ingredients</p>
        </div>

    </div>
    <!-- Container / End -->
</section>


<!-- Content
================================================== -->
<div class="container">

    <!-- Recipe -->
    <div class="twelve columns">
        <div class="alignment">

            <div class="margin-top-50"></div>

            <!-- Ingredients -->
            <ul class="ingredients">

                @for (int i = 0; i < Model.IngredientsList.Count; i++)
                {
                    <li>
                        <input id="check-@i" type="checkbox" name="check" value="check-@i">
                        <label itemprop="ingredients" for="check-@i">@Model.IngredientsList[i]</label>
                    </li>
                }

            </ul>

            <a href="/Recipes/Details/@Model.RecipeId" class="button medium color">Back To Recipe</a>
            <a href="/ShoppingLists/Remove/@Model.Id" class="button medium">Delete Shopping List</a>


        </div>
    </div>


</div>
<!-- Container / End -->

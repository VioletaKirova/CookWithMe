@model CookWithMe.Web.ViewModels.Categories.All.CategoryAllViewModel

@{
    ViewData["Title"] = "All";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />

<!-- Content
================================================== -->
<div class="container">

    <!-- Masonry -->
    <div class="twelve columns">

        <!-- Headline -->
        <h3 class="headline">@Model.Title</h3>
        <span class="line rb margin-bottom-35"></span>
        <div class="clearfix"></div>

        <!-- Isotope -->
        <div class="isotope">

            @foreach (var recipe in Model.Recipes)
            {
                <!-- Recipe #1 -->
            <div class="four recipe-box columns">

                <!-- Thumbnail -->
                <div class="thumbnail-holder">
                    <a href="/Recipes/Details/@recipe.Id">
                        <img src="@recipe.Photo" alt="" />
                        <div class="hover-cover"></div>
                        <div class="hover-icon">View Recipe</div>
                    </a>
                </div>

                <!-- Content -->
                <div class="recipe-box-content">
                    <h3><a href="/Recipes/Details/@recipe.Id" class="text-wrap">@recipe.Title</a></h3>

                    <div class="clearfix"></div>
                </div>
            </div>
            }

        </div>
        <div class="clearfix"></div>

    </div>


    <!-- Sidebar
    ================================================== -->
    <div class="four columns">

        <!-- Search Form -->
        <div class="widget search-form">
            <nav class="search">
                <form action="#" method="get">
                    <button><i class="fa fa-search"></i></button>
                    <input class="search-field" type="text" placeholder="Search for recipes" value="" />
                </form>
            </nav>
            <div class="clearfix"></div>
        </div>

        <!-- Categories -->
        @await Component.InvokeAsync("CategorySidebar")

    </div>


</div>
<!-- Container / End -->

<div class="margin-top-5"></div>

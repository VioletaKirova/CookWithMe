@page
@model LoginModel

@{
    ViewData["Title"] = "Login";
}

<!-- Titlebar
================================================== -->
<section id="titlebar">
    <!-- Container -->
    <div class="container">

        <div class="eight columns">
            <h2>@ViewData["Title"]</h2>
        </div>

    </div>
    <!-- Container / End -->
</section>



<!-- Content
================================================== -->
<div class="container">
    <div class="sixteen columns">
        <form id="account" method="post" class="register-user-form">

            <!-- Username -->
            <h4>Username</h4>
            <nav class="input-val form-group">
                <input type="text" asp-for="Input.Username" class="form-control" />
                <span asp-validation-for="Input.Username" class="text-danger"></span>
            </nav>
            <div class="clearfix"></div>


            <div class="margin-top-25"></div>


            <!-- Password -->
            <h4>Password</h4>
            <nav class="input-val form-group">
                <input type="password" asp-for="Input.Password" class="form-control" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </nav>
            <div class="clearfix"></div>


            <div class="margin-top-30"></div>


            <button type="submit" class="button color big">Login</button>

        </form>
    </div>
</div>
<!-- Container / End -->


<div class="margin-top-50"></div>
